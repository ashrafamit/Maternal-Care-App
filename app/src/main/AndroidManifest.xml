<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ashrafamit.maternalcare">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaternalCare">
        <activity android:name=".queryActivity"></activity>
        <activity android:name=".alarmNotification" />
        <activity android:name=".immunization_schedule" />
        <activity android:name=".ShowReminderMsg" />
        <activity android:name=".dueDateActivity" />
        <activity android:name=".registrationActivity" />
        <activity android:name=".settingsActivity" />
        <activity android:name=".loginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".AlarmReceiver" />
    </application>

</manifest>